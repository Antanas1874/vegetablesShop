@model ClientUI.Models.User

@{
    TempData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<body style="text-align: center;">
    <div class="row" style="display: inline-block; margin-top: 40px; margin-right: 13%">
        <div style="display: inline-block; align-content: center;">
            <form asp-action="Login" style="width: 180%; display: inline-block;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" required/>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" class="form-control" type="password" required/>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>

<div>
    <a asp-controller="Home" asp-action="Index">Back to products</a>
</div>

